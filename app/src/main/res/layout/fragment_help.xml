<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:gravity="center"
    android:background="@color/primary_black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/cd_duration"
        android:background="@color/primary_black"
        android:paddingLeft="20.0dip"
        android:paddingTop="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingBottom="30.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/primary_white"
            android:layout_gravity="start"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="How to measure my heart rate?" />
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/secondary_white"
            android:layout_gravity="start"
            android:id="@+id/txt_dia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:text="Just cover that phone's camera with your finger and start still during the measurement." />
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/primary_white"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/primary_white"
            android:layout_gravity="start"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="What is a normal heart rate?" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/secondary_white"
            android:layout_gravity="start"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:text="A normal resting heart rate, for adults, ranges from 60 to 100 BPM. However, keep in mind that many factors can influence the heart rate, including fitness level, body size, emotion, etc." />
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/primary_white"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/primary_white"
            android:layout_gravity="start"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Developed By" />
        <TextView
            android:id="@+id/kashaf"
            android:textSize="16.0sp"
            android:textColor="@color/secondary"
            android:layout_gravity="start"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:text="Kashaf Ahmed(16227)"/>

    </LinearLayout>
</ScrollView>

