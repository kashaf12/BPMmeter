<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/primary_black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/primary_black"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginRight="35.0dip">

            <TextView
                android:textSize="18.0sp"
                android:textColor="@color/primary_white"
                android:gravity="start"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BASIC INFORMATION"
                android:textAllCaps="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginRight="35.0dip"
            android:baselineAligned="false">



            <android.support.design.widget.TextInputLayout
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:layout_width="0.0dip"
                android:textColorHint="@color/secondary_white"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <EditText
                    android:textSize="20.0sp"
                    android:textColor="@color/primary_white"
                    android:gravity="start"
                    android:id="@+id/edittext_name"
                    android:background="@color/primary_black"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textColorHint="@color/secondary_white"
                    android:hint="Name"
                    android:maxLines="1"
                    android:popupBackground="@color/secondary_black_shadow"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <View
            android:background="@color/secondary_black_shadow"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="40.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginRight="40.0dip"
            android:layout_marginBottom="40.0dip" />

        <LinearLayout
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginRight="35.0dip"
            android:baselineAligned="false">

            <android.support.design.widget.TextInputLayout
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:layout_width="0.0dip"
                android:textColorHint="@color/secondary_white"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <EditText
                    android:textSize="20.0sp"
                    android:textColor="@color/primary_white"
                    android:gravity="start"
                    android:id="@+id/edittext_yob"
                    android:background="@color/primary_black"
                    android:layout_width="100.0dip"
                    android:layout_height="fill_parent"
                    android:textColorHint="@color/secondary_white"
                    android:hint="Year of Birth"
                    android:maxLines="1"
                    android:maxLength="4"
                    android:popupBackground="@color/secondary_black_shadow"
                    android:inputType="number"
                    android:imeOptions="actionDone" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:layout_width="0.0dip"
                android:textColorHint="@color/secondary_white"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <EditText
                    android:textSize="20.0sp"
                    android:textColor="@color/primary_white"
                    android:gravity="start"
                    android:id="@+id/edittext_weight"
                    android:background="@color/primary_black"
                    android:layout_width="100.0dip"
                    android:layout_height="fill_parent"
                    android:textColorHint="@color/secondary_white"
                    android:hint="Weight(Kg)"
                    android:maxLines="1"
                    android:maxLength="3"
                    android:popupBackground="@color/secondary_black_shadow" android:inputType="number" android:imeOptions="actionDone" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <View
            android:background="@color/secondary_black_shadow"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="40.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginRight="40.0dip"
            android:layout_marginBottom="40.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:layout_marginTop="0.0dip"
            android:layout_marginRight="35.0dip">

            <TextView
                android:textSize="16.0sp"
                android:textColor="@color/primary_white"
                android:gravity="start"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEASUREMENT TIME (SEC)"
                android:textAllCaps="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginRight="35.0dip"
            android:layout_marginBottom="0.0dip"
            android:baselineAligned="false">
            <android.support.design.widget.TextInputLayout
                android:gravity="start"
                android:paddingLeft="10.0dip"
                android:paddingRight="0.0dip"
                android:paddingBottom="0.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <EditText
                    android:textSize="20.0sp"
                    android:textColor="@color/secondary"
                    android:background="@color/primary_black"
                    android:layout_width="200.0dip"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:maxLines="1"
                    android:clickable="false"
                    android:focusable="false"
                    android:maxLength="5"
                    android:popupBackground="@color/secondary_black_shadow" android:inputType="number" android:windowSoftInputMode="stateHidden" android:imeOptions="actionDone" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>